@using PropertyManager.Domain.Models.Enums
@model EditUnitViewModel

<h2>Edit Unit</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Type</label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="form-group">
        <label>Unit Number</label>
        <input asp-for="UnitNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Area</label>
        <input asp-for="Area" class="form-control" />
    </div>

    <div class="form-group">
        <label>Property</label>
        <select asp-for="PropertyId" asp-items="Model.Properties" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Floor</label>
        <input asp-for="Floor" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<UnitStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
