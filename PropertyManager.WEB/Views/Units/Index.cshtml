@using PropertyManager.Domain.Models.Enums
@model UnitIndexViewModel
@section Scripts {
    <script src="~/js/units/units-index.js"></script>
}

<h2>Units</h2>

<form method="get" class="mb-3">
    <select name="propertyId" asp-items="Model.Properties">
        <option value="">-- Property --</option>
    </select>

    <select name="status" asp-items="Html.GetEnumSelectList<UnitStatus>()">
        <option value="">-- Status --</option>
    </select>

    <button type="submit">Filter</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Unit</th>
            <th>Building</th>
            <th>Floor</th>
            <th>Size</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Units)
        {
            <tr>
                <td>@item.UnitNumber</td>
                <td>@item.PropertyName</td>
                <td>@item.Floor</td>
                <td>@item.Area</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteUnit(@item.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="Index"
           asp-route-page="@i"
           asp-route-propertyId="@Model.PropertyId"
           asp-route-status="@Model.Status"
           class="btn btn-sm @(i == Model.Page ? "btn-primary" : "btn-light")">
            @i
        </a>
    }
</div>
