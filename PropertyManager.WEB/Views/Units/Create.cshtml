@using PropertyManager.Domain.Models.Enums
@using PropertyManager.WEB.ViewModels.Units
@model CreateUnitViewModel

<h2>Create Unit</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label>Property</label>
        <select asp-for="PropertyId" asp-items="Model.Properties" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Unit Number</label>
        <input asp-for="UnitNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Floor</label>
        <input asp-for="Floor" class="form-control" />
    </div>

    <div class="form-group">
        <label>Size (m²)</label>
        <input asp-for="SizeSqM" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control"
                asp-items="Html.GetEnumSelectList<UnitStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">
        Create
    </button>

</form>
